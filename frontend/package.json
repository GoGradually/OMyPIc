{
  "name": "omypic-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "electron:prep": "node scripts/prepare-resources.mjs",
    "electron:build": "npm run build && npm run electron:prep && electron-builder",
    "electron:build:win": "npm run build && npm run electron:prep && electron-builder --win nsis",
    "electron:build:mac": "npm run build && npm run electron:prep && electron-builder --mac dmg"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "extract-zip": "^2.0.1",
    "jsdom": "^28.0.0",
    "tar": "^7.4.3",
    "vite": "^5.4.3",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.omypic.app",
    "productName": "OMyPIc",
    "files": [
      "dist/**",
      "electron/main.cjs",
      "electron/preload.cjs"
    ],
    "extraResources": [
      {
        "from": "electron/resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "electron"
    },
    "artifactName": "OMyPIc-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.education"
    }
  }
}
